{
  "name": "weather-pwa",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "repository": "github:kaiser-jan/weather-pwa",
  "scripts": {
    "dev": "vite dev",
    "dev:host": "vite dev --host",
    "build": "vite build",
    "preview": "vite preview",
    "preview:host": "vite preview --host",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "generate-pwa-assets": "pwa-assets-generator",
    "openapi:metno": "bunx @hey-api/openapi-ts -i https://api.met.no/weatherapi/locationforecast/2.0/swagger -o src/lib/types/metno -p '@hey-api/typescript'",
    "openapi:geosphere-at": "bunx @hey-api/openapi-ts -i https://dataset.api.hub.geosphere.at/v1/openapi.json  -o src/lib/types/geosphere-at -p '@hey-api/typescript'",
    "install:meteocons": "git clone https://github.com/basmilius/weather-icons .local/meteocons || (cd .local/meteocons && git pull) && mkdir -p static/weather-symbols && cp -r .local/meteocons/production/fill/svg-static static/weather-symbols/meteocons-fill-static && cp -r .local/meteocons/production/fill/svg static/weather-symbols/meteocons-fill-animated",
    "setup": "bun run install:meteocons && bun run openapi:metno && bun run openapi:geosphere-at"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "@internationalized/date": "^3.8.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.22.5",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@types/conventional-changelog": "^6.0.0",
    "@types/d3": "^7.4.3",
    "@types/luxon": "^3.6.2",
    "@types/suncalc": "^1.9.2",
    "@types/uuid": "^10.0.0",
    "@vite-pwa/assets-generator": "^1.0.0",
    "@vite-pwa/sveltekit": "^1.0.0",
    "conventional-changelog": "^7.1.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "defu": "^6.1.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-svelte": "^3.10.1",
    "globals": "^16.3.0",
    "mode-watcher": "^1.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "semantic-release": "^24.2.7",
    "semantic-release-json-changelog-generator": "^1.0.2",
    "svelte": "^5.35.6",
    "svelte-check": "^4.2.2",
    "svelte-sonner": "^1.0.5",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "uuid": "^11.1.0",
    "vaul-svelte": "^1.0.0-next.7",
    "vite": "^7.0.4",
    "wrangler": "^4.25.1"
  },
  "dependencies": {
    "@lucide/svelte": "^0.515.0",
    "bits-ui": "^2.8.10",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "idb": "^8.0.3",
    "luxon": "^3.7.1",
    "suncalc": "^1.9.0",
    "svelte-dnd-action": "^0.9.64",
    "svelte-gestures": "^5.1.4",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss-animate": "^1.0.7"
  }
}
