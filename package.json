{
  "name": "weather-pwa",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "dev:host": "vite dev --host",
    "build": "vite build",
    "preview": "vite preview",
    "preview:host": "vite preview --host",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "generate-pwa-assets": "pwa-assets-generator",
    "openapi:metno": "bunx @hey-api/openapi-ts -i https://api.met.no/weatherapi/locationforecast/2.0/swagger -o src/lib/types/metno -p '@hey-api/typescript'",
    "openapi:geosphere-at": "bunx @hey-api/openapi-ts -i https://dataset.api.hub.geosphere.at/v1/openapi.json  -o src/lib/types/geosphere-at -p '@hey-api/typescript'",
    "install:meteocons": "git clone https://github.com/basmilius/weather-icons .local/meteocons || (cd .local/meteocons && git pull) && mkdir -p static/weather-symbols && cp -r .local/meteocons/production/fill/svg-static static/weather-symbols/meteocons-fill-static && cp -r .local/meteocons/production/fill/svg static/weather-symbols/meteocons-fill-animated",
    "setup": "bun run install:meteocons && bun run openapi:metno && bun run openapi:geosphere-at"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@eslint/js": "^9.27.0",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/kit": "^2.21.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/postcss": "^4.1.7",
    "@tailwindcss/vite": "^4.1.7",
    "@types/luxon": "^3.6.2",
    "@types/suncalc": "^1.9.2",
    "@types/uuid": "^10.0.0",
    "@vite-pwa/assets-generator": "^1.0.0",
    "@vite-pwa/sveltekit": "^1.0.0",
    "defu": "^6.1.4",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-svelte": "^3.8.0",
    "globals": "^16.1.0",
    "mode-watcher": "^1.0.7",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte": "^5.30.1",
    "svelte-check": "^4.2.1",
    "svelte-sonner": "^1.0.1",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "uuid": "^11.1.0",
    "vaul-svelte": "^0.3.2",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "bits-ui": "0.22.0",
    "clsx": "^2.1.1",
    "idb": "^8.0.3",
    "lucide-svelte": "^0.511.0",
    "luxon": "^3.6.1",
    "suncalc": "^1.9.0",
    "tailwind-merge": "^3.3.0",
    "tailwind-variants": "^1.0.0"
  }
}
