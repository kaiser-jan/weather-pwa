{
  "name": "weather-pwa",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "repository": "github:kaiser-jan/weather-pwa",
  "scripts": {
    "dev": "vite dev",
    "dev:host": "vite dev --host",
    "build": "vite build",
    "preview": "vite preview",
    "preview:host": "vite preview --host",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "generate-pwa-assets": "pwa-assets-generator",
    "openapi:metno": "bunx @hey-api/openapi-ts -i https://api.met.no/weatherapi/locationforecast/2.0/swagger -o src/lib/types/metno -p '@hey-api/typescript'",
    "openapi:geosphere-at": "bunx @hey-api/openapi-ts -i https://dataset.api.hub.geosphere.at/v1/openapi.json  -o src/lib/types/geosphere-at -p '@hey-api/typescript'",
    "install:meteocons": "git clone https://github.com/basmilius/weather-icons .local/meteocons || (cd .local/meteocons && git pull) && mkdir -p static/weather-symbols && cp -r .local/meteocons/production/fill/svg-static static/weather-symbols/meteocons-fill-static && cp -r .local/meteocons/production/fill/svg static/weather-symbols/meteocons-fill-animated",
    "setup:dev": "bun run setup:ci && bun run openapi:metno && bun run openapi:geosphere-at",
    "setup:ci": "bun run install:meteocons && bun run generate-pwa-assets"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.37.0",
    "@internationalized/date": "^3.10.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@sveltejs/adapter-auto": "^6.1.1",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.43.8",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/vite": "^4.1.14",
    "@types/conventional-changelog": "^6.0.0",
    "@types/d3": "^7.4.3",
    "@types/leaflet": "^1.9.20",
    "@types/luxon": "^3.7.1",
    "@types/suncalc": "^1.9.2",
    "@types/uuid": "^11.0.0",
    "@vite-pwa/assets-generator": "^1.0.1",
    "@vite-pwa/sveltekit": "^1.0.0",
    "conventional-changelog": "^7.1.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "defu": "^6.1.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.4.0",
    "mode-watcher": "^1.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "semantic-release": "^24.2.9",
    "semantic-release-json-changelog-generator": "^1.0.2",
    "svelte": "^5.39.8",
    "svelte-check": "^4.3.2",
    "svelte-persisted-store": "^0.12.0",
    "svelte-sonner": "^1.0.5",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "uuid": "^13.0.0",
    "vaul-svelte": "^1.0.0-next.7",
    "vite": "^7.1.9",
    "wrangler": "^4.42.0"
  },
  "dependencies": {
    "@lucide/svelte": "^0.544.0",
    "@turf/boolean-point-in-polygon": "^7.2.0",
    "bits-ui": "^2.11.4",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "geojson": "^0.5.0",
    "idb": "^8.0.3",
    "leaflet": "^1.9.4",
    "luxon": "^3.7.2",
    "openmeteo": "^1.2.1",
    "suncalc": "^1.9.0",
    "svelte-dnd-action": "^0.9.65",
    "svelte-gestures": "^5.2.2",
    "svelte-settings": "^1.1.0",
    "sveltekit-search-params": "^3.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "svelte-settings"
  ]
}
